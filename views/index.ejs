<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
   <div class="container mt-4">
     <h3 class="text-center">Students Form</h3>
     <!-- This is Edit For Sutdents -->
      <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
Add students
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Students</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/save" method="POST">
          <div class="row">
              <div class="col">
                <input type="text"  name="name" class="form-control mt-2" placeholder="Enter Your Name" required>
              </div>
              <div class="col">
                <input type="text" name="age" class="form-control mt-2" placeholder="Enter Your Age" aria-label="Last name" required>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <input type="text" name="fatherName" class="form-control mt-2" placeholder="Enter Your Father Name" aria-label="First name" required>
              </div>
              <div class="col">
                <input type="text" name="motherName" class="form-control mt-2" placeholder="Enter Your Mother Name" aria-label="Last name" required>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <input type="text" name="address" class="form-control mt-2" placeholder="Enter Your Address" aria-label="First name" required>
              </div>
              <div class="col">
                <input type="submit" value="Add Students" class="form-control mt-2 btn btn-primary" required>
              </div>
            </div>
          </div>
          </form>
      </div>
    </div>
  </div>
</div>

     <!-- This is end Students For Students -->
       
   </div>
      <div class="container mt-4">
        <table class="table table-dark table-striped">
          <thead>
              <tr class="text-center">
                  <th>Name</th>
                  <th>Age</th>
                  <th>Father Name</th>
                  <th>Mother Name</th>
                  <th>Address</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
            <% students.forEach(function(student){ %>
              <tr class="text-center">
                  <td><%= student.name%></td>
                  <td><%= student.age%></td>
                  <td><%= student.fatherName %></td>
                  <td><%= student.motherName %></td>
                  <td><%= student.address %></td>
                  <td>
                      <a href="edit/<%= student.id %>" class="btn btn-sm btn-primary">Edit</a>
                      <a href="delete/<%= student.id %>"  onclick="return confirm('Are you sure?')" class="btn btn-sm btn-danger">Delete</a>
                  </td>
              </tr>
          <%})%>
          </tbody>
        </table>
      </div>
   <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>